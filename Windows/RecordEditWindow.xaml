<Window x:Class="AliDnsManager.Windows.RecordEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AliDnsManager.Windows"
        mc:Ignorable="d"
        Title="DNS记录编辑" Width="600" MinHeight="480" SizeToContent="Height" WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- 现代化样式定义 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#495057"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="CaretBrush" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#888888"/>
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
    </Window.Resources>
    <Border Background="White" CornerRadius="8" Margin="20" Padding="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" Background="#0078D4" CornerRadius="8,8,0,0" Padding="20,15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📝" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Name="txtWindowTitle" Text="DNS记录编辑" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- 表单内容 -->
            <ScrollViewer Grid.Row="1" Margin="25,20" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 域名显示 -->
                <Label Grid.Row="0" Grid.Column="0" Content="域名:" Style="{StaticResource ModernLabel}"/>
                <Border Grid.Row="0" Grid.Column="1" Background="#F8F9FA" CornerRadius="4" Padding="10,8" Margin="0,0,0,15">
                    <TextBlock Name="txtDomainName" Text="" FontWeight="SemiBold" Foreground="#0078D4"/>
                </Border>

                <!-- 主机记录 -->
                <Label Grid.Row="1" Grid.Column="0" Content="主机记录:" Style="{StaticResource ModernLabel}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="txtRR" Margin="0,0,0,15" Height="36" Style="{StaticResource ModernTextBox}"/>

                <!-- 记录类型 -->
                <Label Grid.Row="2" Grid.Column="0" Content="记录类型:" Style="{StaticResource ModernLabel}"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Name="cmbType" Margin="0,0,0,15" Height="36" Style="{StaticResource ModernComboBox}">
                    <ComboBoxItem Content="A" IsSelected="True"/>
                    <ComboBoxItem Content="AAAA"/>
                    <ComboBoxItem Content="CNAME"/>
                    <ComboBoxItem Content="MX"/>
                    <ComboBoxItem Content="TXT"/>
                    <ComboBoxItem Content="NS"/>
                    <ComboBoxItem Content="SRV"/>
                    <ComboBoxItem Content="CAA"/>
                </ComboBox>

                <!-- 记录值 -->
                <Label Grid.Row="3" Grid.Column="0" Content="记录值:" Style="{StaticResource ModernLabel}"/>
                <TextBox Grid.Row="3" Grid.Column="1" Name="txtValue" Margin="0,0,0,15" Height="36" Style="{StaticResource ModernTextBox}"/>

                <!-- TTL -->
                <Label Grid.Row="4" Grid.Column="0" Content="TTL:" Style="{StaticResource ModernLabel}"/>
                <ComboBox Grid.Row="4" Grid.Column="1" Name="cmbTTL" Margin="0,0,0,15" Height="36" IsEditable="True" IsTextSearchEnabled="False" StaysOpenOnEdit="True" Style="{StaticResource ModernComboBox}">
                    <ComboBoxItem Content="600" IsSelected="True"/>
                    <ComboBoxItem Content="300"/>
                    <ComboBoxItem Content="1800"/>
                    <ComboBoxItem Content="3600"/>
                    <ComboBoxItem Content="43200"/>
                    <ComboBoxItem Content="86400"/>
                </ComboBox>

                <!-- 优先级 -->
                <Label Grid.Row="5" Grid.Column="0" Content="优先级:" Style="{StaticResource ModernLabel}"/>
                <TextBox Grid.Row="5" Grid.Column="1" Name="txtPriority" Text="0" Margin="0,0,0,15" Height="36" Style="{StaticResource ModernTextBox}"/>

                <!-- 线路 -->
                <Label Grid.Row="6" Grid.Column="0" Content="线路:" Style="{StaticResource ModernLabel}"/>
                <ComboBox Grid.Row="6" Grid.Column="1" Name="cmbLine" Margin="0,0,0,15" Height="36" Style="{StaticResource ModernComboBox}">
                    <ComboBoxItem Content="默认" Tag="default" IsSelected="True"/>
                    <ComboBoxItem Content="电信" Tag="telecom"/>
                    <ComboBoxItem Content="联通" Tag="unicom"/>
                    <ComboBoxItem Content="移动" Tag="mobile"/>
                    <ComboBoxItem Content="海外" Tag="oversea"/>
                    <ComboBoxItem Content="教育网" Tag="edu"/>
                </ComboBox>

                <!-- 提示信息 -->
                <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Background="#E7F3FF" CornerRadius="4" Padding="12,8" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💡" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="请确保记录值格式正确，TTL建议设置为600秒或更高" FontSize="12" Foreground="#0078D4" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                </Grid>
            </ScrollViewer>

            <!-- 按钮区域 -->
            <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,8,8" Padding="25,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="btnOK" Content="✅ 确定" Width="100" Height="36" Margin="0,0,10,0" Click="BtnOK_Click" IsDefault="True" Style="{StaticResource ModernButton}"/>
                    <Button Name="btnCancel" Content="❌ 取消" Width="100" Height="36" Click="BtnCancel_Click" IsCancel="True" Style="{StaticResource CancelButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
